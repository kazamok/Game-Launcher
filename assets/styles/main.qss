}

QPushButton.save-button:hover {
    background: #FFC133;
}

QPushButton.cancel-button {
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    padding: 10px 20px;
    color: white;
    font-size: 14px;
}

QPushButton.cancel-button:hover {
