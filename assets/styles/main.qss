}

QPushButton.browse-button:hover {
    border-color: #FFB100;
    color: #FFB100;
}

/* Стили для диалога загрузки */
#download-dialog {
    background-color: #1a1a1a;
    border: 1px solid #333;
}

#download-dialog QLabel {
    color: #fff;
    font-size: 14px;
}

#download-dialog QProgressBar {
    border: 1px solid #666;
    border-radius: 3px;
    text-align: center;
    height: 25px;
    background: #222;
}

#download-dialog QProgressBar::chunk {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                               stop:0 #4a9eff,
                               stop:1 #2e5c99);
}

#download-dialog QPushButton {
    background: #2a2a2a;
    border: 1px solid #444;
    border-radius: 3px;
    color: #fff;
    padding: 5px 15px;
    min-width: 80px;
}

#download-dialog QPushButton:hover {
    background: #333;
}

#download-dialog QPushButton:pressed {
    background: #222;
}

/* Стили прогресса загрузки */
QProgressBar#download-progress {
    border: 1px solid rgba(255, 177, 0, 0.3);
    border-radius: 8px;
    background: rgba(0, 0, 0, 0.3);
    text-align: center;
    color: white;
}

QProgressBar#download-progress::chunk {
    background: qlineargradient(
        x1: 0, y1: 0, x2: 1, y2: 0,
        stop: 0 rgba(255, 177, 0, 0.8),
        stop: 1 rgba(255, 177, 0, 0.6)
    );
    border-radius: 8px;
}

