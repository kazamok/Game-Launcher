}

QPushButton#get-client-button:hover {
    background: qlineargradient(
        x1:0, y1:0, x2:0, y2:1,
        stop:0 #4aa9e0,
        stop:1 #3a91ca
    );
}


QLabel#download-info {
    color: white;
    font-size: 14px;
}

QLabel#download-speed {
    color: #FFB100;
    font-size: 14px;
}

