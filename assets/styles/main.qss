QLineEdit.settings-input {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    padding: 10px 12px;
    min-height: 20px;
    color: white;
    font-size: 14px;
}

QLineEdit.settings-input:focus {
