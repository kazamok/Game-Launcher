}

QTabBar::tab {
    background: transparent;
    border: none;
    padding: 8px 16px;
    color: #999;
    font-size: 14px;
}

QTabBar::tab:selected {
    color: #FFB100;
    border-bottom: 2px solid #FFB100;
}

QTabBar::tab:hover:!selected {
    color: #FFC133;
}

